<%- include('templates/header', { title: title, authenticated: authenticated, username: username, user_type: user_type }) %>

<h1 class="mb-4">Welcome, <%= username %>! Here are some Parrots:</h1>

<% if (images && images.length > 0) { %>
    <div class="row">
        <% images.forEach(function(imageName) { %>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card">
                    <img src="/images/<%= imageName %>" class="card-img-top img-fluid" alt="A lovely parrot" style="height: 300px; object-fit: cover;">
                    <div class="card-body">
                        <p class="card-text text-center"><%= imageName.split('.')[0] %></p>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
<% } else { %>
    <p>No parrot images to display right now.</p>
<% } %>
<br><br><br> <!-- Extra space before footer -->

<%- include('templates/footer') %>